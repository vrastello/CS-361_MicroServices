
<div class="grid">
  <div class="row">
    <div class="row-lg-6">
      <h3>Are you sure you want to quit?</h3>
    </div>
    <div class="row-lg-6">
      <h3>This will delete all lists.</h3>
    </div>
    <div class="row-lg-6">
      <h6>Items will be saved for easy look up next time : ).</h6>
    </div>
    <div class="row-lg-6">
      <div class="btn-group">
        <%= button_to "Go back", root_path, method: :get, class: "btn btn-outline-primary" %>
      </div>
      <div class="btn-group">
        <%= button_to "Quit", quit_path, method: :get, class: "btn btn-outline-danger" %>
      </div>
    </div>
  </div>
</div>


